{
  "compilerOptions": {
    "target": "ESNEXT",
    "baseUrl": ".",
    "module": "CommonJS",
    "pretty": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "dist",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
