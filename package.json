{
  "name": "vue3-chrome-extension-starter",
  "type": "module",
  "version": "1.0.0",
  "description": "Vue3 Chrome 插件起手摸板",
  "author": "orangelckc <https://github.com/orangelckc>",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --fix && stylelint src/**/*.{vue,css,scss} --fix",
    "prepare": "pnpm simple-git-hooks"
  },
  "dependencies": {
    "pinia": "^2.1.7",
    "pinia-plugin-persistedstate": "^3.2.1",
    "vue": "^3.3.13",
    "vue-router": "^4.2.5",
    "vue3-toastify": "^0.2.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.4.6",
    "@btrl/stylelint-config": "^1.0.3",
    "@unocss/reset": "^0.58.0",
    "@vitejs/plugin-vue": "^4.6.0",
    "eslint": "^8.56.0",
    "lint-staged": "^15.2.0",
    "sass": "^1.69.5",
    "simple-git-hooks": "^2.9.0",
    "stylelint": "^15.11.0",
    "typescript": "^5.3.3",
    "unocss": "^0.58.0",
    "unocss-preset-daisy": "^7.0.0",
    "unplugin-auto-import": "^0.17.2",
    "vite": "^5.0.10",
    "vite-plugin-web-extension": "^4.1.0",
    "vite-plugin-zip-pack": "^1.0.7",
    "vue-tsc": "^1.8.26"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{vue,ts,js,json}": "eslint --fix",
    "*.{vue,css,scss}": "stylelint --fix"
  }
}
